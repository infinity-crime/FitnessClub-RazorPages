@page
@model FitnessClub.Web.Pages.Errors._404Model
@{
    Layout = null;
    ViewData["Title"] = "Error 404!";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MyFitnessClub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessClub.Web.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">Фитнес клуб БГТУ "ВОЕНМЕХ"</a>
        </div>
    </nav>

    <div class="container flex-grow-1 text-center py-5">
        <h1 class="display-1 text-danger">404</h1>
        <p class="lead">К сожалению, страница не найдена.</p>
        <a class="btn btn-primary" asp-page="/Index">Вернуться на главную</a>
    </div>

    <footer class="bg-light text-center py-3 mt-auto">
        <div class="container">
            <small>&copy; @DateTime.Now.Year Фитнес клуб БГТУ "ВОЕНМЕХ"</small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>